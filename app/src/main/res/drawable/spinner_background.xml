<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Đặt bóng -->
        <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
            <shape>
                <solid android:color="@color/black"/> <!-- Màu bóng (màu đen với độ mờ) -->
                <corners android:radius="16dp"/> <!-- Bán kính bo góc của bóng -->
            </shape>
        </item>
        <!-- Đặt nền -->
        <item>
            <shape>
                <solid android:color="#FFFFFF"/>  <!-- Màu nền của Spinner -->
                <corners android:radius="16dp"/>  <!-- Bo góc -->
            </shape>
        </item>
    </layer-list>
