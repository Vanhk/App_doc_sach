<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <EditText
        android:id="@+id/edt_chapter_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:hint="Tên chương"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/edittext_background_add"
        android:gravity="center_vertical" />

    <EditText
        android:id="@+id/edt_start_page"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.5"
        android:inputType="number"
        android:hint="Start"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/edittext_background_add"
        android:gravity="center_vertical" />

    <EditText
        android:id="@+id/edt_end_page"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.5"
        android:inputType="number"
        android:hint="End"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/edittext_background_add"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/btn_remove_chapter"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/trash"
        android:contentDescription="Xóa chương"
        android:padding="5dp" />
</LinearLayout>