<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="0dp">

        <View
            android:id="@+id/image_2023_"
            android:layout_width="wrap_content"
            android:layout_height="277dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/img_2023_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/t_n_ng_nh_p"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:lineSpacingExtra="-4sp"
            android:text="@string/t_n_ng_nh_p"
            android:textAppearance="@style/t_n_ng_nh_p"
            app:layout_constraintBottom_toTopOf="@+id/edtTen_dang_nhap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edtTen_dang_nhap"
            app:layout_constraintTop_toBottomOf="@+id/image_2023_"
            app:layout_constraintVertical_bias="0.529" />

        <EditText
            android:id="@+id/edtTen_dang_nhap"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Tên đăng nhập"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_2023_" />

        <TextView
            android:id="@+id/txtmatkhau"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:lineSpacingExtra="-4sp"
            android:text="@string/matkhau"
            android:textAppearance="@style/t_n_ng_nh_p"
            app:layout_constraintBottom_toTopOf="@+id/edtmatkhau"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edtmatkhau"
            app:layout_constraintTop_toBottomOf="@+id/image_2023_"
            app:layout_constraintVertical_bias="0.926" />

        <EditText
            android:id="@+id/edtmatkhau"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Mật khẩu"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTen_dang_nhap" />

        <Button
            android:id="@+id/btndang_nhap"
            style="@style/dangnhap"
            android:layout_width="145dp"
            android:layout_height="69dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:text="Đăng nhập"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtmatkhau" />

        <TextView
            android:id="@+id/hoichuacotaikhoan"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="44dp"
            android:gravity="top"
            android:lineSpacingExtra="-2sp"
            android:text="Bạn chưa có tài khoản?"
            android:textAppearance="@style/t_n_ng_nh_p"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btndang_nhap" />

        <Button
            android:id="@+id/btndang_ky"
            android:layout_width="145dp"
            android:layout_height="69dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"
            android:text="Đăng ký"
            android:backgroundTint="@color/blue_dam"
            style="@style/dangnhap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hoichuacotaikhoan" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>